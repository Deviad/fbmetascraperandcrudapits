{
    "compilerOptions": {
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "target": "es6",
        "lib": [
            "es5",
            "es2015.iterable",
            "es2015.collection",
            "es2015.promise",
            "dom"
        ],
        "types": [
            "node",
            "express",
            "rxjs"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "spec.bundle.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
